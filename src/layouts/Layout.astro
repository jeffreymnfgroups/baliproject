---
// src/layouts/Layout.astro - Enhanced layout for sports facility
import Footer from '../components/Footer.tsx';
import StickyWhatsAppButton from '../components/StickyWhatsAppButton.tsx';
import logoImage from '../assets/projects/logo.webp';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Bali Beach Sports & Recreation Facility - World's First Fully Integrated Beach Sports Arena" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href={logoImage.src} type="image/webp" />
    
    <!-- Preload critical fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.balibeachsports.com/">
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content="https://www.balibeachsports.com/og-image.jpg">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://www.balibeachsports.com/">
    <meta property="twitter:title" content={title}>
    <meta property="twitter:description" content={description}>
    <meta property="twitter:image" content="https://www.balibeachsports.com/og-image.jpg">
    
    <!-- Critical CSS to prevent layout shift -->
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
        overflow-x: hidden;
        background: #000;
        line-height: 1.6;
        color: #fff;
      }
      
      /* Ensure navigation is stable from the start */
      nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        will-change: transform;
      }
      
      /* Prevent font swapping issues */
      .font-inter {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
      }
      
      /* Prevent initial content shift */
      [data-hydrating] {
        visibility: hidden;
      }
      
      [data-hydrated] {
        visibility: visible;
      }
      
      /* Smooth transitions only after page load */
      .loaded * {
        transition-property: color, background-color, border-color, text-decoration-color, fill, stroke, opacity, box-shadow, transform, filter, backdrop-filter;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
        transition-duration: 300ms;
      }

      /* Full viewport height support */
      .min-h-screen {
        min-height: 100vh;
        min-height: 100dvh;
      }
    </style>
    
    <title>{title}</title>
  </head>
  <body data-hydrating class="bg-black text-white">
    <slot />
    
    <!-- Footer Component -->
    <Footer client:load />
    
    <!-- Sticky WhatsApp Button -->
    <StickyWhatsAppButton client:load />
    
    <style is:global>
      @import '../styles/global.css';
    </style>
    
    <!-- Script to handle hydration and prevent layout shifts -->
    <script>
      // Mark as hydrated and enable smooth transitions
      document.addEventListener('DOMContentLoaded', () => {
        document.body.setAttribute('data-hydrated', '');
        document.body.removeAttribute('data-hydrating');
        
        // Add loaded class after a brief delay to enable smooth transitions
        setTimeout(() => {
          document.body.classList.add('loaded');
        }, 100);
      });
      
      // Handle React hydration completion
      window.addEventListener('load', () => {
        setTimeout(() => {
          document.body.classList.add('loaded');
        }, 200);
      });

      // Smooth scroll polyfill for older browsers
      if (!('scrollBehavior' in document.documentElement.style)) {
        const script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/gh/iamdustan/smoothscroll@master/src/smoothscroll.js';
        document.head.appendChild(script);
      }
    </script>
  </body>
</html>